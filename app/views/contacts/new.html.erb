<% content_for :title do %>Contact<% end %>
<h3><%= t(:contact) %></h3>
<div class="form">
  <%= simple_form_for @contact do |form| %>
    <%= form.error_notification %>
    <%= form.input :name, label: t(:name), autofocus: true %>
    <%= form.input :email, label: t(:email) %>
    <%= form.input :content, label: t(:content), as: :text %>
    <%= form.button :submit, t(:submit), class: 'submit' %>
  <% end %>
</div>
